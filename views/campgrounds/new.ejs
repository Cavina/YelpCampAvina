<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div mb-3>
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
            </div>
            <div mb-3>
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
            </div>
           
             <!-- <input type="file" name="image" id="" multiple>-->
            <!-- <div mb-3>
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="location" name="campground[image]" required>
            </div> -->
            
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.0" aria-label="price" aria-describedby="price-label"
                name="campground[price]" required>
              </div>
            </div>
        

            <div mb-3>
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="location" name="campground[description]" required></textarea>
            </div>

            <div class="mb-3">
                <label for="formFileMultiple image" class="form-label">Upload Images</label>
                <input class="form-control" type="file" id="formFileMultiple image" name="image" multiple>
            </div>

            <!-- <div class="mb-3">
                <label for="formFileMultiple image" class="form-file-label">Upload Images</label>
                <input type="file" class="form-file-input custom-file-input" id="image" name="image" multiple>
            </div> -->

            <div class="mb-3">
            <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>
</div>

